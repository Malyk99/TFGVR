<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <GridLayout
        android:id="@+id/gridMinigames"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp">

        <Button
            android:id="@+id/buttonMinigame1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="Minigame 1"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/buttonMinigame2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="Minigame 2"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/buttonMinigame3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="Minigame 3"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/buttonMinigame4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="Minigame 4"
            android:background="@android:color/darker_gray" />


    </GridLayout>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="end"
        android:padding="8dp"/>

</LinearLayout>
